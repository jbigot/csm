#ifndef APPLY_UNARY_WITH_H
#define APPLY_UNARY_WITH_H

namespace skelgis{

  //================================================================================
  //Types of user functions
  //-------------------------------------------------------------------------------
  struct _ApplyUnaryWith_Func
  //-------------------------------------------------------------------------------
  {
    virtual void operator()(Data&, Data&,void *) const =0;
  };
  //================================================================================

  //================================================================================
  //specializations of skeleton ApplyUnary
  
  //-------------------------------------------------------------------------------
  struct ApplyUnaryWith
  //-------------------------------------------------------------------------------
  {
    inline static void apply(const _ApplyUnaryWith_Func& func, Data& m, Data& m2, void * object)
    {
      m.update();
      func(m,m2,object);
    }
  };
  //-------------------------------------------------------------------------------
}

#endif
