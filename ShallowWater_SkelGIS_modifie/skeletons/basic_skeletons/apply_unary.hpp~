#ifndef APPLY_UNARY_H
#define APPLY_UNARY_H

namespace skelgis{

  //================================================================================
  //Types of user functions
  //-------------------------------------------------------------------------------
  struct _ApplyUnary_Func
  //-------------------------------------------------------------------------------
  {
    virtual void operator()(Data&, Data&) const =0;
  };
  //-------------------------------------------------------------------------------
  //================================================================================

  //================================================================================
  //specializations of skeleton ApplyUnary
  //-------------------------------------------------------------------------------
  struct ApplyUnary
  //-------------------------------------------------------------------------------
  {
    static void apply(const _ApplyUnary_Func& func, Data& m, Data& m2)
    {
      m.update();
      func(m,m2);
    }
  };
  //-------------------------------------------------------------------------------

}

#endif
