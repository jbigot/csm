#ifndef APPLY_BINARY_H
#define APPLY_BINARY_H

namespace skelgis{

  //================================================================================
  //Types of user functions
  //-------------------------------------------------------------------------------
  struct _ApplyBinary_Func
  //-------------------------------------------------------------------------------
  {
    virtual void operator()(Data*, Data*, Data*) const =0;
  };
  //-------------------------------------------------------------------------------
  //================================================================================

  //================================================================================

  //-------------------------------------------------------------------------------
  struct ApplyBinary
  //-------------------------------------------------------------------------------
  {
    inline static void apply(const _ApplyBinary_Func& func, Data* m, Data* m2, Data* m3)
    {
      //m->update();
      //m2->update();
      func(m,m2,m3);
    }
  };
  //-------------------------------------------------------------------------------
}

#endif
